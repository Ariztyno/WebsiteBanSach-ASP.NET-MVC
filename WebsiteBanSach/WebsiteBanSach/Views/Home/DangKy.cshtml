
@using WebsiteBanSach.Models
@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">
    <!-- Title Page-->
    <title>Ben Vo BookStore || Home: Benvobook.com</title>
    <!-- Icons font CSS-->
    <link href="~/Content/LayoutDangKy/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/Content/LayoutDangKy/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Vendor CSS-->
    <link href="~/Content/LayoutDangKy/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/Content/LayoutDangKy/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <!-- Main CSS-->
    <link href="~/Content/LayoutDangKy/css/main.css" rel="stylesheet" media="all">
</head>
<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Đăng Ký</h2>
                    @if (ViewBag.Message != null)
                    {
                        <h3 class="alert alert-success">@ViewBag.Message</h3>
                    }
                    @if (@ViewBag.Error != null)
                    {
                        <h3 class="alert alert-danger">@ViewBag.Error</h3>
                    }
                    @using (Html.BeginForm("DangKy", "Home", FormMethod.Post, new { enctype = "multilpart/form-data" }))
                    {
                        @Html.AntiForgeryToken();
                        <hr />
                        <br />
                        @Html.ValidationSummary(true);
                        <div class="input-group">
                            <label class="label">Họ Tên</label>
                            <input class="input--style-4" type="text" name="Name">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                        </div>
                        <div class="dropdown bootstrap-select">
                            <label class="label">Giới tính</label>
                            @Html.DropDownListFor(m => m.Gender, new SelectList(new[]
                                                    {
                                                        new SelectListItem { Value = null, Text = "Chưa xác định" },
                                                        new SelectListItem { Value = false.ToString(), Text = "Nam" },
                                                        new SelectListItem { Value = true.ToString(), Text = "Nữ" },
                                                    },
                                                    "Value",
                                                    "Text"
                                                    ),
                                             new { @class = "selectpicker", @style= "font-size: 20px; font-family: Poppins, Arial, Helvetica Neue, sans-serif; color: #525252;" })
                        </div>
                        <br />
                        <div class="row row-space">
                            <div class="col-4">
                                <label class="label">Ảnh đại diện</label>
                                <input class="input" type="file" name="fileUpload" style="border-style:none;">
                                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Tài Khoản</label>
                                    <input class="input--style-4" type="text" name="UserName">
                                    @Html.ValidationMessageFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Mật Khẩu</label>
                                    <input class="input--style-4" type="password" name="Password">
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Nhập lại mật Khẩu</label>
                                    <input class="input--style-4" type="password" id="confirmpassword" name="confirmpassword" placeholder="Nhập lại mật khẩu" onfocus="this.placeholder=''" onblur="this.placeholder='Nhập lại mật khẩu'">

                                </div>
                            </div>
                        </div>
                        <div class="row row-space">

                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Email</label>
                                    <input class="input--style-4" type="email" name="Email">
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Điện Thoại</label>
                                    <input class="input--style-4" type="text" name="Phone">
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <label class="label">Địa Chỉ</label>
                            <input class="input--style-4" type="text" name="Address">
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Đăng Ký</button>
                        </div>
                        <div class="p-t-15">
                            <a class="btn btn--radius-2 btn--blue" href="/Home/Index" style="text-decoration: none;">Trở về trang chủ</a>
                        </div>
                        if (@ViewBag.ThongBao != null)
                        {
                            <h1>@ViewBag.ThongBao</h1>
                        }
                        else
                        {
                            //
                        }
                    }
                </div>
            </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/Content/LayoutDangKy/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/Content/LayoutDangKy/vendor/select2/select2.min.js"></script>
    <script src="~/Content/LayoutDangKy/vendor/datepicker/moment.min.js"></script>
    <script src="~/Content/LayoutDangKy/vendor/datepicker/daterangepicker.js"></script>
    <!-- Main JS-->
    <script src="~/Content/LayoutDangKy/js/global.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
<!-- end document-->