    <!--preference -->
    <div class="left-side">
        <h3 class="shopf-sear-headits-sear-head">
            Thể loại
        </h3>
        <ul>
            @foreach (var item in ViewBag.Categories)
            {
                <li>
                    <!-- chuyen tới trang sảng phẩm thuộc  thể loại item actionres-->
