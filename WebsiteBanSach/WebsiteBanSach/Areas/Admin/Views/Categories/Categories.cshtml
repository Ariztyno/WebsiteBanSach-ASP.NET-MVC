@using WebsiteBanSach.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WebsiteBanSach.Models.Category>

@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @Html.Raw(input)
    }
    else
    {
        @Html.Raw(input.Substring(0, length))<text >...</text>
    }
}

